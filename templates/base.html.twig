<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>AGG bis{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="/build/app.css">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
</head>
<body>
    <div id="menu">
        <nav>
            <ul>
                <a href="/"><img src="/build/images/logoAGG.2b45c975.png" alt="logo du site" id="logo"></a>
                <li><a href="">Articles</a></li>
                {% if is_granted("ROLE_WRITER") %}
                    <li><a href="/user/writer-space">{{ 'Writer' | trans }}</a></li>
                {% endif %}

                {% if is_granted("ROLE_MODO")%}
                    <li><a href="/user/modo-space">{{ 'Moderator' | trans }}</a></li>
                {% endif %}

                {% if is_granted("ROLE_ADMIN")%}
                    <li><a href="/admin">Admin</a></li>
                {% endif %}

                {% if app.user %}
                    <li><a href="/logout">{{ 'Logout' | trans }}</a></li>
                {% else %}
                    <li><a href="/login">{{ 'Login' | trans }}</a></li>
                    <li><a href="/register">{{ 'Register' | trans }}</a></li>
                {% endif %}

            </ul>
        </nav>
    </div>
    {% block body %}
            {% block content %} {% endblock %}
    {% endblock %}
    <script src="https://kit.fontawesome.com/f33464c73a.js" crossorigin="anonymous"></script>
    <script src="/build/app.js"></script>
</body>
</html>
