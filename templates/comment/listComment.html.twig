{% extends 'base.html.twig' %}

{% block title %} Edit comment {% endblock %}

{% block body %}
    {% block content %}
        {% if comments is defined %}
            {% for comment in comments %}
                <div class="info">
                    <p>{{ comment.user }}</p>
                    <p>{{ comment.content }}</p>
                    <p><a href="{{ path('app_comment_edit', {id :comment.id}) }}">{{ 'Edit comment' | trans }}</a></p>
                    <p><a href="{{ path('app_comment_delete', {id :comment.id}) }}">{{ 'Delete comment' | trans }}</a></p>
                </div>
            {% endfor %}
        {% endif %}
    {% endblock %}
{% endblock %}