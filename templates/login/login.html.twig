{% extends 'base.html.twig' %}

{% block title %} Login {% endblock %}

{% block body %}
    <form method="post">
{#        Display Error given by the Controller#}
        {% if error %}
            <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
{#        Notifies the user that he is already logged in#}
        {% if app.user %}
            <div class="info">You are logged in as {{ app.user.username }}</div>
        {% endif %}

        <h1>Login</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>

        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div>
            <label for="">
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

        <button type="submit">Login</button>
    </form>
{% endblock %}